<div class="row innerT inner-2x">
    <div class="col-md-4 col-md-offset-4 innerT inner-2x">
        <div class="innerT inner-2x">
          <div class="widget innerLR innerB margin-none">
              <h3 class="innerTB text-center">¿Olvidaste tu contraseña?</h3>
              <div class="lock-container">
                  <div class=" text-center">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

                      <div class="innerAll">
                          <%= f.email_field :email, autofocus: true, :class => "form-control text-center bg-gray", :placeholder => "Email" %>
                          <div class="innerB half"></div>
                      </div>
                      <div class="innerT half">
                          <%= f.submit "Resetear contraseña", :class => "btn btn-primary" %>
                      </div>
                      <% end %>
                  </div>

              </div>
          </div>
          <div class="text-right innerT half">
              <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
</div>